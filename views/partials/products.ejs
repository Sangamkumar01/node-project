<div id="grad1" class="row outside_div">
    <% products_data.forEach((product)=>{ %>
    <div class="product_box col-sm-3">
      <div class="inside_div">
        <img class="product_image" src="<%= product.image %>" alt="Image" />
        <h3 class="product_name"><%= product.name %></h3>
        <h3 class="product_price">Rs. <%= product.Price %></h3>
        <button class="add_toCart_button">
          <a class="a_add_toCart" href="/add_to_cart?product_id=<%=product.id%>"
            >Add To cart</a
          >
        </button>
      </div>
    </div>
    <% }) %>
  </div>
  <% if(username){ %>
  <button class="btn-lg btn-primary">
    <a style="text-decoration: none" class="text-white" href="/loadmore"
      >Load More</a
    >
  </button>
  <% } %>